<h1>Create a new task</h1>
<h1>My task</h1>
<div class="form_container">
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
</div>

<div class="back-btn"><i class="fa-solid fa-arrow-left"></i><a href="/tasks">Back to list</a></div>
