<%= form_with model: @task do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>

<i class="fa-solid fa-arrow-left"></i><a href="/tasks">Back to list</a>
